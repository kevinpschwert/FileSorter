@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Home Page";
}

<div id="cwImg" class="row">
    <div class="col-md-9 offset-md-3">
        <img src="~/images/cain-watters-logo-new-2012verysmall.png" />
    </div>
</div>

<div id="dropAreaDiv" class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4 offset-md-3">
                @if (@Configuration.GetSection("SharePointOnline")["site_id"] == "a2a9413b-2cb1-4c09-b51f-e5c6e1d90ac8")
                {
                    <h1>Production</h1>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 offset-md-3">
                <div id="drop-area">
                    <form class="my-form">
                        <p>Upload multiple Zipped Folders by clicking the button or by dragging and dropping the Zipped Folders onto the dashed region.</p>
                        <input type="file" id="fileElem" multiple accept="folder/*" onchange="handleFiles(this.files)">
                        <label class="button" for="fileElem">Select some files</label>
                        <p id="formError">You must insert a zip file to upload</p>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div id="uploadFilesDiv">
                    <p>Folders to be Uploaded:</p>
                    <div id="uploadFiles"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 offset-md-3">
                <button id="uploadFilesBtn" onclick="uploadFiles()">Upload</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 offset-md-3">
                <button id="uploadFilesBtn" onclick="retryUploadFiles()">Retry Upload Files</button>
            </div>
        </div>
    </div>
    <div id="spinner">
        <img src="~/images/hourglass.gif" />
    </div>
</div>

<div class="row folder-structure" id="folderStructure"></div>


